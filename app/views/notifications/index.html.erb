<p style="color: green"><%= notice %></p>

<h1>Notifications</h1>

<%= form_with url: search_search_path, method: :get do |form| %>
  <%= form.label :search %>
  <%= form.text_field :search %>
  <%= form.submit "Submit" %>
<% end %>

<div id="notifications">
  <%= render "notifications/notifications", notifications: @notifications %>
</div>

<%= link_to "New notification", new_notification_path %>
