<h3>Default Fragment Caching</h3>
<table class="table table-bordered mx-auto mt-5">
    <thead>
        <tr>
            <th>ID</th>
            <th>Product</th>
            <th>Desc</th>
            <th>Price</th>            
        </tr>
    </thead>
    <tbody>
        <% @products.each do |info| %>
            <% cache info do %>
                <tr>
                    <td><%= info.id %></td>
                    <td><%= info.name %></td>
                    <td><%= info.desc %></td>
                    <td><%= info.price %></td>
                </tr>
            <% end %>
        <% end %>
    </tbody>
</table>

<h3>Collection Caching</h3>
<%= render 'users', collection: @users, cached: true %>

<h3>Russion Doll Caching</h3>

<%= render 'product', product: @product_phone %>